<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Sobre"
             Title="Sobre"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">

    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                         Padding="10"
                         Spacing="10">

        <Label Text="Sobre o Aplicativo"
               FontFamily="Kalam"
               FontSize="40"
               TextColor="{StaticResource Primary}"
               HorizontalOptions="Center" />

        <Frame Padding="20"
               BackgroundColor="LightGray"
               CornerRadius="15"
               HasShadow="True">

            <VerticalStackLayout Spacing="10">

                <Label Text="Este aplicativo foi desenvolvido para facilitar a contratação de hospedagens de forma simples e intuitiva."
                       FontSize="16"
                       TextColor="Black"
                       HorizontalOptions="Center" />

                <Label Text="Desenvolvedor: Thiago Kaiti Kashihara"
                       FontSize="16"
                       TextColor="Black"
                       HorizontalOptions="Center" />

                <Label Text="Ano de desenvolvimento: 2025"
                       FontSize="16"
                       TextColor="Black"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Frame>

        <Button Text="Voltar"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                CornerRadius="10"
                FontAttributes="Bold"
                Padding="10,5"
                Clicked="Button_OnClicked"
                HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>