<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ContratacaoHospedagem"
             Title="ContratacaoHospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">

    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                         Padding="10"
                         Spacing="10">

        <Label Text="Cálculo da Diária"
               FontFamily="Kalam"
               FontSize="50"
               TextColor="{StaticResource Primary}" />

        <Frame Padding="10" BackgroundColor="LightGray">
            <VerticalStackLayout>
                <Grid RowDefinitions="Auto, Auto"
                      ColumnDefinitions="*, *, 2*">

                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Adultos:" TextColor="Black" />

                    <Label Grid.Row="0" Grid.Column="1"
                           TextColor="Black"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_adultos}"/>

                    <Stepper Grid.Row="0" Grid.Column="2"
                             x:Name="stp_adultos"
                             BackgroundColor="Black"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />

                    <Label Grid.Row="1" Grid.Column="0"
                           Text="Crianças:" TextColor="Black"/>

                    <Label Grid.Row="1" Grid.Column="1"
                           TextColor="Black"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_criancas}"/>

                    <Stepper Grid.Row="1" Grid.Column="2"
                             x:Name="stp_criancas"
                             BackgroundColor="Black"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />
                </Grid>

                <Frame Padding="10" Margin="10" BackgroundColor="LightGray">
                    <VerticalStackLayout>

                        <Label Text="Escolha sua Suíte"
                               TextTransform="Uppercase"
                               FontSize="Subtitle"
                               TextColor="{StaticResource Primary}"/>

                        <Picker x:Name="pck_quarto"
                                TextColor="Black"
                                TitleColor="Black"
                                Title="Selecione sua Acomodação" 
                                BackgroundColor="Black"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame Padding="10"
                       Margin="10" 
                       BackgroundColor="LightGray">
                    <VerticalStackLayout Spacing="10">

                        <Label Text="Período da Estadia"
                               TextTransform="Uppercase"
                               FontSize="Subtitle"
                               TextColor="{StaticResource Primary}"/>

                        <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                            <Label Text="Check-in:" TextColor="Black"/>
                            <DatePicker x:Name="dtpck_checkin"
                                        TextColor="Black"
                                        Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                            <Label Text="Check-out:" TextColor="Black"/>
                            <DatePicker x:Name="dtpck_checkout"
                                        TextColor="Black"
                                        Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>


                <Button Text="Avançar"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        CornerRadius="10"
                        FontAttributes="Bold"
                        Padding="10,5" />

                <Button Text="Sobre o App"
                        BackgroundColor="{StaticResource Gray300}"
                        TextColor="{StaticResource Primary}"
                        CornerRadius="10"
                        FontAttributes="Italic"
                        Padding="8,4"
                        Margin="0,10,0,0"
                        HorizontalOptions="Center" 
                        Clicked="Button_OnClicked"/>


            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>

</ContentPage>